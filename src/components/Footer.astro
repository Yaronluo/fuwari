---
import { profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<!-- 分隔线 -->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>

<!-- 页脚内容 -->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6 py-8">
    <!-- 主要信息 -->
    <div class="transition text-[var(--text-60)] text-sm text-center">
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}.
        Made with <span class="text-red-500 animate-pulse">❤️</span> in China.<br>

        <!-- 链接区域 -->
        <div class="flex flex-wrap justify-center items-center gap-3 mt-3">
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href={url('rss.xml')}>
                <svg class="inline-block w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24"><path d="M3.9 12c0-1.71 1.39-3.1 3.1-3.1h4V7H7c-2.76 0-5 2.24-5 5s2.24 5 5 5h4v-1.9H7c-1.71 0-3.1-1.39-3.1-3.1zM8 13h8v-2H8v2zm9-6h-4v1.9h4c1.71 0 3.1 1.39 3.1 3.1s-1.39 3.1-3.1 3.1h-4V17h4c2.76 0 5-2.24 5-5s-2.24-5-5-5z"/></svg>
                RSS
            </a>
            <span class="text-[var(--text-40)]">|</span>
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href={url('sitemap-index.xml')}>
                <svg class="inline-block w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24"><path d="M3 13h2v8H3zm4-8h2v16H7zm4-2h2v18h-2zm4 4h2v14h-2zm4-2h2v16h-2z"/></svg>
                SiteStatistics
            </a>
            <span class="text-[var(--text-40)]">|</span>
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href="https://www.cloudflare.com/zh-cn/">
                <svg class="inline-block w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
                Github
            </a>
        </div>

        <!-- 备案信息（如果需要） -->
        <div class="mt-3 text-xs text-[var(--text-40)]">
            <a href="https://beian.miit.gov.cn/" target="_blank" rel="noopener noreferrer" class="hover:text-[var(--text-60)] transition">
                <!-- 这里填写你的备案号 -->
                <!-- 京ICP备xxxxxxxx号 -->
            </a>
        </div>

        <!-- 技术栈信息 -->
        <div class="mt-4 text-xs text-[var(--text-40)]">
            Powered by
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href="https://astro.build">Astro</a> &
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a>
            & Hosted on
            <a class="transition link text-[var(--primary)] font-medium hover:underline" target="_blank" href="https://www.cloudflare.com/zh-cn/">Cloudflare</a>
        </div>
    </div>
</div>

<style>
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    .animate-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
